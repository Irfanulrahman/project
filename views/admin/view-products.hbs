<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto mt-3">add product</a>
        </div>
        <table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">no</th>
      <th scope="col">Title</th>
      <th scope="col">category</th>
      <th scope="col">discription</th>
      <th>image</th>
    </tr>
  </thead>
  <tbody>   
    {{#each products}}
    <tr>
      <th scope="row"></th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.discription}}</td>
      <td><img style="width:50px;height=50px;"src="{{this.image}}" alt=""></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>

</section>